### BEGIN WP-API RULES ###
## Do not edit this file unless you know what you're doing.
Options +FollowSymLinks -Indexes -MultiViews

#Redirect all the traffic to the public folder
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteRule ^(.*)$ public/$1 [L,QSA]
</IfModule>

#Deny access to sensitive files
<FilesMatch "^(composer\.json|\.env|\.composer.lock|server\.php|\.gitignore|\.gitattributes)">
    Order Allow,Deny
    Deny from all
</FilesMatch>
### END WP-API RULES ###